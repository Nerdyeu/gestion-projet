import { useState } from 'react'
import { ChevronLeft, ChevronRight, Calendar as CalendarIcon } from 'lucide-react'

export default function Calendar() {
  const [currentDate, setCurrentDate] = useState(new Date())

  // Événements d'exemple - seront synchronisés avec Outlook plus tard
  const events = [
    { id: 1, title: 'Réunion client ABC', date: '2024-01-23', time: '10:00', type: 'meeting' },
    { id: 2, title: 'Présentation projet', date: '2024-01-25', time: '14:00', type: 'presentation' },
    { id: 3, title: 'Deadline refonte site', date: '2024-01-26', time: '18:00', type: 'deadline' },
  ]

  const getEventTypeColor = (type) => {
    switch(type) {
      case 'meeting': return 'bg-blue-100 text-blue-700 border-blue-300'
      case 'presentation': return 'bg-purple-100 text-purple-700 border-purple-300'
      case 'deadline': return 'bg-red-100 text-red-700 border-red-300'
      default: return 'bg-gray-100 text-gray-700 border-gray-300'
    }
  }

  return (
    <div>
      <div className="mb-8">
        <h1 className="text-3xl font-bold text-gray-900">Calendrier</h1>
        <p className="mt-2 text-gray-600">Gérez vos rendez-vous et échéances</p>
      </div>

      <div className="grid lg:grid-cols-3 gap-6">
        {/* Calendrier */}
        <div className="lg:col-span-2">
          <div className="bg-white rounded-lg shadow p-6">
            <div className="flex items-center justify-between mb-6">
              <h2 className="text-xl font-semibold text-gray-900">
                {currentDate.toLocaleDateString('fr-FR', { month: 'long', year: 'numeric' })}
              </h2>
              <div className="flex gap-2">
                <button className="p-2 hover:bg-gray-100 rounded-lg">
                  <ChevronLeft size={20} />
                </button>
                <button className="p-2 hover:bg-gray-100 rounded-lg">
                  <ChevronRight size={20} />
                </button>
              </div>
            </div>

            <div className="text-center text-gray-500 mb-8">
              <CalendarIcon className="mx-auto mb-2" size={48} />
              <p>Vue calendrier à venir</p>
              <p className="text-sm mt-1">Synchronisation Outlook sera intégrée ici</p>
            </div>
          </div>
        </div>

        {/* Événements à venir */}
        <div className="lg:col-span-1">
          <div className="bg-white rounded-lg shadow p-6">
            <h3 className="text-lg font-semibold text-gray-900 mb-4">Événements à venir</h3>
            <div className="space-y-3">
              {events.map((event) => (
                <div
                  key={event.id}
                  className={`p-3 rounded-lg border ${getEventTypeColor(event.type)}`}
                >
                  <div className="font-medium">{event.title}</div>
                  <div className="text-sm mt-1">
                    {new Date(event.date).toLocaleDateString('fr-FR')} à {event.time}
                  </div>
                </div>
              ))}
            </div>
          </div>

          {/* Info Outlook */}
          <div className="mt-6 bg-blue-50 rounded-lg p-4 border border-blue-200">
            <div className="flex items-start gap-3">
              <CalendarIcon className="text-blue-600 flex-shrink-0" size={20} />
              <div className="text-sm text-blue-900">
                <p className="font-medium mb-1">Synchronisation Outlook</p>
                <p className="text-blue-700">
                  Connectez votre compte Outlook pour synchroniser automatiquement vos rendez-vous.
                </p>
                <button className="mt-3 px-3 py-1 bg-blue-600 text-white rounded text-sm hover:bg-blue-700">
                  Connecter Outlook
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  )
}
